{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "no-infer": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": ["node", "jest", "webpack-env"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "paths": {
      "@/*": [
        "./src/*" // set path `@/*` as alias of `src/*`
      ]
    }
  },
  // "include": [
  //   "src/**/*.ts",
  //   "src/**/*.tsx",
  //   "tests/**/*.ts",
  //   "tests/**/*.tsx",
  //   "typings/**/*.d.ts"
  // ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/components/*.vue"
  ],
  "exclude": ["node_modules"]
}
